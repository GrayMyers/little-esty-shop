<h1>This is the admin dashboard</h1>

<%= link_to 'merchants', admin_merchants_path %>
<%= link_to 'invoices', admin_invoices_path %>


<h2>Top 5 Customers</h2>
<section id="top-customers">
  <ul>
    <% @customers.each do |customer| %>
        <li id="customer-<%= customer.id %>"><%= customer.first_name + " " + customer.last_name + " :#{customer.number_of_successful_transactions}" %></li>
    <% end %>
  </ul>
</section>


<h2>Incomplete Invoices</h2>
<section id="Incomplete Invoices">
  <ul>
    <% @incomplete_invoices.each do |invoice| %>
      <li><%= invoice.id %></li>
    <% end %>
  </ul>
</section>
